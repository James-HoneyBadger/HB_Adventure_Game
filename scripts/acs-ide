#!/usr/bin/env python3
"""
Adventure Construction Set - IDE Launcher
Launch the graphical adventure editor
"""
import sys
from pathlib import Path

# Add src to path
sys.path.insert(0, str(Path(__file__).parent.parent / "src"))

from acs.ui.ide import AdventureIDE
import tkinter as tk

if __name__ == "__main__":
    root = tk.Tk()
    app = AdventureIDE(root)
    root.mainloop()
